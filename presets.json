[
	{
		"name": "Basic toot",
		"props": {
			"server": "$toot.server",
			"accessToken": "$toot.accessToken",
			"tootText": "::toot_text::"
		}
	},
	{
		"name": "Toot with images",
		"props": {
			"server": "$toot.server",
			"accessToken": "$toot.accessToken",
			"tootText": "::toot_text::",
			"tootImagePaths": [
				"/path/to/image.jpg"
			]
		}
	},
	{
		"name": "Toot with images (ask every time for the text)",
		"props": {
			"server": "$toot.server",
			"accessToken": "$toot.accessToken",
			"tootImagePaths": [
				"/path/to/image.jpg"
			]
		}
	}
]