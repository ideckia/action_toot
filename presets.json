[
	{
		"name": "Basic toot",
		"props": {
			"server": "$toot.server",
			"access_token": "$toot.accessToken",
			"toot_text": "::toot_text::"
		}
	},
	{
		"name": "Toot with images",
		"props": {
			"server": "$toot.server",
			"access_token": "$toot.accessToken",
			"toot_text": "::toot_text::",
			"toot_image_paths": [
				"/path/to/image.jpg"
			]
		}
	},
	{
		"name": "Toot with images (ask every time for the text)",
		"props": {
			"server": "$toot.server",
			"access_token": "$toot.accessToken",
			"toot_image_paths": [
				"/path/to/image.jpg"
			]
		}
	}
]